<div class="container hidden">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <form id="entry">
                <div class="form-group">
                    <label for="title">Title:</label>
                    <input placeholder="Entry Title" type="text" class="form-control" id="title">
                    <br />
                    <label for="body">Body:</label>
                    <textarea placeholder="Entry Body" class="form-control" rows="10" id="textBox"></textarea>
                    <div class="form-group">
                        <label for="category">Select User:</label>
                        <select class="form-control" id="user">
                        </select>
                    </div>
                    <div class="form-group">
                        <label>
                            <input type="radio" name="private" value="0" {{{setChecked auto mode}}}>Public</label>
                        <br>
                        <label>
                            <input type="radio" name="private" value="1">Private</label>
                        <br>
                        </select>
                    </div>
                    <br />
                    <button type="submit" class="btn btn-success submit">Submit</button>
                    <button type="button" class="btn btn-primary" id="speech-start">Start</button>
                    <button type="button" class="btn btn-primary" id="speech-stop">Stop</button>
                </div>
            </form>
        </div>
    </div>
</div>
</div>
</div>
<!-- Custom Script -->
<script src="../js/entry.js" type="text/javascript"></script>
<script src="../js/artyom.window.js" type="text/javascript"></script>